<!-- res/drawable/edit_text_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with glass effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#80FFFFFF" /> <!-- Use the alpha value for transparency -->
            <stroke
                android:width="2dp"
                android:color="@color/Gray" />
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="@color/ShadowColor" /> <!-- Set the shadow color and width -->
        </shape>
    </item>
</layer-list>
